{
    "compilerOptions": {

        // "experimentalDecorators": true,
        // "target": "esnext",

        "lib": ["esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler", // old: "node"
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,

        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },

        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "src/**/*.ts",
        "typings/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
}
