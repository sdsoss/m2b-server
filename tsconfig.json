{
    "compilerOptions": {

        // "experimentalDecorators": true,
        // "target": "esnext",

        "lib": ["esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler", // old: "node"
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,

        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
